<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taller3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/toolbar"/>
            <Button
                android:id="@+id/btn_mostrar3"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="Escoger" />
            <Button
                android:id="@+id/btn_StartPB"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Start ProgressBar" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:minHeight="50dp"
                android:minWidth="200dp"
                android:progress="1" >
            </ProgressBar>
            <TextView
                android:id="@+id/txtProgreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"/>

            <TextView
                android:id="@+id/txtFuncion"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Permitir al usuario seleccionar una fecha configurable. Se puede elegir año, mes y día respectivamente. " />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>